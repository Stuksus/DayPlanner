<Window x:Class="DayPlanner.UI.PropertiesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DayPlanner.UI"
        mc:Ignorable="d"
        Title="PropertiesWindow" Height="600" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <StackPanel >
            <TextBlock TextAlignment="Center" Margin="10">Create New Task!</TextBlock>
            <TextBlock Width="200" Margin="1">Name:</TextBlock>
            <TextBox Width="200" Margin="0 0 0 5"  x:Name="NameSpace"></TextBox>
            <TextBlock Width="200" Margin="1">Start:</TextBlock>
            <Calendar x:Name="StartDate"></Calendar>
            <TextBlock Width="200" Margin="1">End:</TextBlock>
            <Calendar x:Name="EndDate"></Calendar>
            <TextBlock Width="200" Margin="1">Description:</TextBlock>
            <TextBox Width="200" Height="50" Margin="0 0 0 5"  x:Name="DescriptionSpace"></TextBox>
            <Button Width ="200" Height="20" Margin="0 0 0 10" Click="AddTask">Create New Task!</Button>
        </StackPanel>
    </Grid>
</Window>
